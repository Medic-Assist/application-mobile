<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.BubbleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        tools:visibility="visible"
        android:orientation="vertical">

        <Button
            android:id="@+id/createBubbleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CrÃ©er une bulle" />

        <Button
            android:id="@+id/listBubblesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lister les bulles"
            tools:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bubblesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/> <!-- Pour afficher les boulles -->

        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</FrameLayout>