<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="304dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnArrived"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="I've arrived" />

    <Button
        android:id="@+id/btnParking"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="I'm parking" />

    <Button
        android:id="@+id/btnLate"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="I'll be late" />

    <Button
        android:id="@+id/btnNotThere"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="I won't be there" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inputMessage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Ã‰crivez votre message" />

        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:src="@drawable/ic_send_foreground"
            android:scaleX="0.5"
            android:scaleY="0.5"/>
    </LinearLayout>

</LinearLayout>
