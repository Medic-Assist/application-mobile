<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".ui.fragments.MesProchesFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Rainbow"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:paddingBottom="8dp" />

        <!-- RecyclerView to display contacts -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contacts_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white" />

        <!-- Titre Principal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choix d'un proche"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingTop="16dp" />

        <!-- Sous-titre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personne à prévenir en cas de problème"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:paddingBottom="16dp" />

        <!-- Input Nom -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom"
            android:textColor="@color/black"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/input_nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez le nom"
            android:backgroundTint="@color/black" />

        <!-- Input Prénom -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prénom"
            android:textColor="@color/black"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/input_prenom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez le prénom"
            android:backgroundTint="@color/black" />

        <!-- Input Numéro de Téléphone -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Numéro de téléphone"
            android:textColor="@color/black"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/input_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez le numéro de téléphone"
            android:inputType="phone"
            android:backgroundTint="@color/black" />

        <!-- Input Adresse E-mail -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adresse e-mail"
            android:textColor="@color/black"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez l'adresse e-mail"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/black" />

        <!-- Espacement -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Boutons Modifier et Enregistrer -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="2">

            <!-- Bouton Modifier -->
            <Button
                android:id="@+id/btn_modifier"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modifier"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:layout_marginEnd="8dp" />

            <!-- Bouton Enregistrer -->
            <Button
                android:id="@+id/btn_enregistrer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enregistrer"
                android:textColor="@color/white"
                android:backgroundTint="@color/black" />
        </LinearLayout>

        <!-- Bouton Retour -->
        <Button
            android:id="@+id/btn_back_to_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retour"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:layout_gravity="start"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</FrameLayout>
